@page "/calendar"
@page "/calendar/{CalendarID}"

@if (Calendar == null)
{
    <p><em>Loading...</em></p>
}
else
{
    int counter = 1;

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Host</th>
                <th>Name</th>
                <th>Start Time</th>
                <th>Finish Time</th>
                <th>Expand</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Calendar.Activities)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td>@GetHostName(activity.CreatorID)</td>
                    <td>@activity.Name</td>
                    <td>@activity.StartTime.ToLongDateString()</td>
                    <td>@activity.FinishTime.ToLongDateString()</td>
                    <td><a>More Information</a></td>
                </tr>
            }
        </tbody>
    </table>
}