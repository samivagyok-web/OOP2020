@page "/createperson" 

<h3>Createa new Person</h3>

<EditForm Model="Person" OnValidSubmit="HandleValidSubmit">
    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <InputText id="FirstName" class="form-control" @bind-Value="Person.FirstName" placeholder="Enter your First Name"></InputText>
    </div>

    <div class="form-group">
        <label for="FirstName">Last Name:</label>
        <InputText id="LastName" class="form-control" @bind-Value="Person.LastName" placeholder="Enter your Last Name"></InputText>
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <InputText id="Email" class="form-control" @bind-Value="Person.Email" placeholder="Enter your Email"></InputText>
    </div>

    <div class="form-group">
        <label for="Birthday">Birthday:</label>
        <InputDate id="Birthday" class="form-control" @bind-Value="Person.Birthday" placeholder="Enter your Birthday"></InputDate>
    </div>

    <button type="submit">Submit</button>
</EditForm>